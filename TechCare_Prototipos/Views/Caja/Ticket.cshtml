

@{
    ViewData["Title"] = "Ticket de Cuenta";
}

<div class="container d-flex justify-content-center">
    <div class="card" style="max-width: 420px">
        <div class="card-body">
            <h3 class="card-title">TechCare Solutions</h3>

            <!-- Información de la Cuenta -->
            <p>ID de Cuenta: 123</p>
            <p>Fecha de Creación del Ticket: @DateTime.Now.ToShortDateString()</p>

            <!-- Detalles de las Órdenes -->
            <table class="table">
                <thead>
                    <tr>
                        <th>Cantidad</th>
                        <th>Nombre del Producto</th>
                        <th>Costo</th>
                        <th>Precio</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>2</td>
                        <td>Producto 1</td>
                        <td>$10</td>
                        <td>$15</td>
                        <td>$30</td>
                    </tr>
                    <tr>
                        <td>1</td>
                        <td>Producto 2</td>
                        <td>$8</td>
                        <td>$12</td>
                        <td>$12</td>
                    </tr>
                </tbody>
            </table>

            <!-- Totales -->
            <p>Total de Productos: $42</p>
            <p>Subtotal (sin propina): $42</p>
            <p>Propina: $4.20</p>
            <p>Total con Propina: $46.20</p>

            <!-- Método de Pago -->
            <p>Método de Pago: Efectivo</p>
            <p>Cantidad Pagada: $50</p>
            <p>Cambio: $3.80</p>

            <!-- Atención -->
            <p>Atendido en Mesa por: Nombre del Mesero</p>
            <p>Atendido en el Pago por: Nombre del Mesero de Pago</p>

            <!-- Mensaje de Agradecimiento -->
            <p>¡Gracias por visitar TechCare Solutions!</p>

            <!-- Botones de Volver y Finalizar Pago -->
            <div class="text-center mt-3">
                <a href="@Url.Action("Index", "Caja")" class="btn btn-secondary">Volver</a>
            </div>
        </div>
    </div>
</div>
