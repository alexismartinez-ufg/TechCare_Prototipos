                    </div>

                    <!-- Categoría: Postres -->
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapsePostres">
                                Postres
                            </button>
                        </h2>
                        <div id="collapsePostres" class="accordion-collapse collapse" aria-labelledby="headingPostres" >
                            <div class="accordion-body">
                                <ul>
                                    <!-- Genera una lista de productos aleatoria para Postres (puedes reemplazar esto con tus datos reales) -->
                                    <li>Producto 1 (Postre)</li>
                                    <li>Producto 2 (Postre)</li>
                                    <!-- Agrega más elementos según sea necesario -->
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-5 col-sm-12">
                <h2>Características</h2>
                <div class="mb-3">
                    <label for="nombreProducto" class="form-label">Nombre del producto:</label>
                    <input type="text" class="form-control" id="nombreProducto" value="Producto 1" disabled>
                </div>
                <div class="mb-3">
                    <label for="descripcionProducto" class="form-label">Descripción:</label>
                    <input type="text" class="form-control" id="descripcionProducto" value="Descripción del Producto 1" disabled>
                </div>
                <div class="mb-3">
                    <label for="precioProducto" class="form-label">Precio:</label>
                    <input type="text" class="form-control" id="precioProducto" value="$10.00" disabled>
                </div>
                <div class="mb-3">
                    <label for="cantidadProducto" class="form-label">Cantidad seleccionada:</label>
                    <input type="number" class="form-control" id="cantidadProducto" value="1">
                </div>
                <div class="mb-3">
                    <label for="comentarioProducto" class="form-label">Agregar comentario:</label>
                    <textarea class="form-control" id="comentarioProducto" rows="4" cols="50"></textarea>
                </div>

                <div class="text-center">
                    <a href="@Url.Action("Detalle", new { Success = true })" class="btn btn-outline-success">Agregar Orden</a>
                </div>
                <!-- Agrega más características según sea necesario -->
            </div>

        </div>
