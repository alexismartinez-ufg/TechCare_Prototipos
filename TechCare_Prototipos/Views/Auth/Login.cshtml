@model LoginViewModel

@{
    Layout = "_NoAuthLayout";
}

<div class="container">
    <div class="d-flex align-items-center flex-column">
        <div class="container col-lg-4 col-md-4">
            <form>
                <div class="text-center">
                    <h3>Login</h3>
                </div>

                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" asp-for="UserName">
                </div>

                <div class="mb-3">
                    <label for="inputPassword5" class="form-label">Password</label>
                    <input type="password" id="inputPassword5" class="form-control" aria-describedby="passwordHelpBlock" asp-for="Password">
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary mb-3">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>